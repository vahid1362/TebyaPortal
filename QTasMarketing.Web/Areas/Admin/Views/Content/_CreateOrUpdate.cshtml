@using Kendo.Mvc.UI
@using QTasMarketing.Web.Areas.Admin.Models.Content
@model QTasMarketing.Web.Areas.Admin.Models.Content.ContentViewModel
<div class="box-body">
    
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                @Html.Label("", "گروه والد", new { @class = "control-label col-md-1" })
                <div class="col-md-6">
                   @Html.DropDownListFor(model=>model.GroupId,Model.SelectListItems, new {@class="form-control", Id="DropDown"})
                    
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control date-textbox" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">

                @Html.LabelFor(model => model.Lead, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Lead, new { htmlAttributes = new { @class = "form-control date-textbox" } })
                    @Html.ValidationMessageFor(model => model.Lead, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.IsAllowedComment, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2 ">
                    @Html.CheckBoxFor(model => model.IsAllowedComment, new { htmlAttributes = new { @class = "form-control " } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Lead, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-6 ">
                    @Html.EditorFor(model => model.Lead, new { htmlAttributes = new { @class = "form-control date-textbox" } })
                    @Html.ValidationMessageFor(model => model.Lead, "", new { @class = "text-danger" })

                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10 ">
                    <div class="k-rtl" >
                        @(Html.Kendo().EditorFor(x => x.Body)

                              .HtmlAttributes(new {style = "height:440px"})
                              //  .Tools(tools => tools.Clear().InsertImage().InsertFile())
                              .ImageBrowser(imageBrowser => imageBrowser
                                  .Image("~/shared/Images/{0}")
                                  .Read("Read", "ImageEditor")
                                  .Create("Create", "ImageEditor")
                                  .Destroy("Destroy", "ImageEditor")
                                  .Upload("Upload", "ImageEditor"))
                             
                              )
                    </div>
                   
                    @Html.ValidationMessageFor(model => model.Body, "", new {@class = "text-danger"})

                </div>
            </div>

        </div>
    </div>

</div>
<script>
    function onDataBound(e) {
        var defaultItem = e.sender.dataSource.at(0);
        e.sender.value(defaultItem.ProductID);
    }

    $(function() {
        $("#DropDown").select2();
    });
</script>
